{
  "compilerOptions": {
    "baseUrl": ".", // <-- Add this line
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/app/admin/dormers/components/AddDormerModal.tsx",
    "src/app/admin/expenses/components/ViewEditExpenseModal.js",
    "src/app/dormer/layout.js",
    "src/app/user/userSidebBar/sidebar.js"
  ],
  "exclude": ["node_modules"]
}
